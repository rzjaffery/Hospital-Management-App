<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">


        <TextView
            android:id="@+id/tvDoctorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dr. John Doe"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center" />
        <TextView
            android:id="@+id/tvDoctorEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="johndow@hms.com"
            android:textSize="18sp"
            android:textStyle="italic"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvDoctorSpecialization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Specialization: Cardiology"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvDoctorTimings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Timings: Mon-Fri, 9 AM - 5 PM"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvDoctorDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Experienced cardiologist with over 10 years in practice."
            android:textSize="15sp"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnBookAppointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Appointment"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>
